@model IEnumerable<MvcModal.Models.User>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section scripts{
    <script src="@Url.Content("~/Scripts/User.js")" type="text/javascript"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            var createUserParams = {
                createUserButtonSelector: '.createDialog',
                createUserDialogSelector: '#dialog-user-create',
                submitButtonSelector: '#btnSave',
                createUserDialogContentUrl: '@Url.Action("Create", "User")'
            };

            var parameters = {
                createUserParams: createUserParams
            };

            var userHandler = new MvcModal.User.Handler(parameters);
            userHandler.initialize();
        });
    </script>
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "createDialog" })
</p>

@Html.Partial("_List", Model)

<div class="modal fade" id="dialog-user-create" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
        </div>
    </div>
</div>